{
  "name": "beyondcompareintegration",
  "displayName": "Beyond Compare Integration",
  "description": "Open files in Beyond Compare directly from VSCode",
  "version": "0.0.1",
  "publisher": "",
  "author": "",
  "icon": "./images/Logo.png",
  "keywords": [
    "Beyondcompare",
    "Beyond-compare",
    "Beyond",
    "Compare"
  ],
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beyondcompareintegration.launchBC",
        "title": "Launch Beyond Compare",
        "category": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.selectLeft",
        "title": "Select Left File for Compare",
        "category": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.compareWithLeft",
        "title": "Compare to Left File",
        "category": "Beyond Compare",
        "enablement": "beyondcompareintegration.leftSelected"
      },
      {
        "command": "beyondcompareintegration.selectLeftFolder",
        "title": "Select Left Folder for Compare",
        "catagory": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.compareWithLeftFolder",
        "title": "Compare to Left Folder",
        "category": "Beyond Compare",
        "enablement": "beyondcompareintegration.leftFolderSelected"
      },
      {
        "command": "beyondcompareintegration.compareWithFile",
        "title": "Compare to File...",
        "category": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.compareWithFolder",
        "title": "Compare to Folder...",
        "category": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.compareParent",
        "title": "Compare Parent to Folder...",
        "category": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.compareWithSave",
        "title": "Compare with Saved Version",
        "category": "Beyond Compare"
      },
      {
        "command": "beyondcompareintegration.selectLeftText",
        "title": "Select Highlighted Text as Left File",
        "category": "Beyond Compare",
        "enablement": "editorHasSelection"
      },
      {
        "command": "beyondcompareintegration.compareWithLeftText",
        "title": "Compare Highlighted Text with Left File",
        "category": "Beyond Compare",
        "enablement": "editorHasSelection && beyondcompareintegration.leftSelected"
      },
      {
        "command": "beyondcompareintegration.gitCompare",
        "title": "Compare to Head",
        "enablement": "scmProvider == git"
      },
      {
        "command": "beyondcompareintegration.openFromDiff",
        "title": "Open diff in Beyond Compare",
        "enablement": "isInDiffEditor",
        "category": "Beyond Compare",
        "icon": {
          "light": "./images/VSCode_BCLogo_Mono_Light.svg",
          "dark": "./images/VSCode_BCLogo_Mono_Dark.svg"
        }
      },
      {
        "command": "beyondcompareintegration.compareSelected",
        "title": "Compare Selected Files",
        "enablement": "listMultiSelection === true",
        "category": "Beyond Compare"
      }
    ],
    "submenus": [
      {
        "id": "editorTitleContextCompare",
        "label": "Beyond Compare"
      },
      {
        "id": "explorerContextCompare",
        "label": "Beyond Compare"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "submenu": "editorTitleContextCompare",
          "when": "resourceExtname == true"
        }
      ],
      "editorTitleContextCompare": [
        {
          "command": "beyondcompareintegration.selectLeft",
          "group": "LeftRight"
        },
        {
          "command": "beyondcompareintegration.compareWithLeft",
          "group": "LeftRight"
        },
        {
          "command": "beyondcompareintegration.compareWithFile"
        },
        {
          "command": "beyondcompareintegration.launchBC"
        },
        {
          "command": "beyondcompareintegration.compareParent"
        },
        {
          "command": "beyondcompareintegration.compareWithSave",
          "when": "isFileSystemResource"
        }
      ],
      "explorer/context": [
        {
          "submenu": "explorerContextCompare",
          "when": "listMultiSelection === false"
        },
        {
          "command": "beyondcompareintegration.compareSelected",
          "when": "listMultiSelection === true"
        },
        {
          "command": "beyondcompareintegration.launchBC",
          "when": "listMultiSelection === true"
        }
      ],
      "explorerContextCompare": [
        {
          "command": "beyondcompareintegration.launchBC"
        },
        {
          "command": "beyondcompareintegration.selectLeft",
          "when": "explorerResourceIsFolder === false",
          "group": "LeftRight"
        },
        {
          "command": "beyondcompareintegration.compareWithLeft",
          "when": "explorerResourceIsFolder === false",
          "group": "LeftRight"
        },
        {
          "command": "beyondcompareintegration.compareWithFile",
          "when": "explorerResourceIsFolder === false"
        },
        {
          "command": "beyondcompareintegration.selectLeftFolder",
          "when": "explorerResourceIsFolder",
          "group": "LeftRight"
        },
        {
          "command": "beyondcompareintegration.compareWithLeftFolder",
          "when": "explorerResourceIsFolder",
          "group": "LeftRight"
        },
        {
          "command": "beyondcompareintegration.compareWithFolder",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "beyondcompareintegration.compareParent",
          "when": "explorerResourceIsFolder === false"
        }
      ],
      "editor/context": [
        {
          "command": "beyondcompareintegration.selectLeftText"
        },
        {
          "command": "beyondcompareintegration.compareWithLeftText"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "beyondcompareintegration.gitCompare",
          "when": "scmProvider == git"
        }
      ],
      "editor/title": [
        {
          "command": "beyondcompareintegration.openFromDiff",
          "when": "isInDiffEditor",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "beyondcompareintegration.selectLeftFolder",
          "when": "false"
        },
        {
          "command": "beyondcompareintegration.compareWithLeftFolder",
          "when": "false"
        },
        {
          "command": "beyondcompareintegration.compareWithFolder",
          "when": "false"
        },
        {
          "command": "beyondcompareintegration.compareWithSave",
          "when": "editorFocus"
        },
        {
          "command": "beyondcompareintegration.gitCompare",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "beyondcompareintegration.launchBC",
        "key": "alt+shift+b"
      },
      {
        "command": "beyondcompareintegration.selectLeft",
        "key": "alt+shift+[",
        "when": "editorFocus && !editorHasSelection"
      },
      {
        "command": "beyondcompareintegration.compareWithLeft",
        "key": "alt+shift+]",
        "when": "editorFocus && !editorHasSelection"
      },
      {
        "command": "beyondcompareintegration.selectLeftText",
        "key": "alt+shift+[",
        "when": "editorFocus && editorHasSelection"
      },
      {
        "command": "beyondcompareintegration.compareWithLeftText",
        "key": "alt+shift+]",
        "when": "editorFocus && editorHasSelection"
      },
      {
        "command": "beyondcompareintegration.compareParent",
        "key": "alt+shift+6",
        "when": "editorFocus"
      },
      {
        "command": "beyondcompareintegration.compareWithFile",
        "key": "alt+shift+5",
        "when": "editorFocus && !isInDiffEditor"
      },
      {
        "command": "beyondcompareintegration.openFromDiff",
        "key": "alt+shift+5",
        "when": "!filesExplorerFocus && isInDiffEditor"
      },
      {
        "command": "beyondcompareintegration.compareWithSave",
        "key": "alt+shift+s",
        "when": "editorFocus"
      },
      {
        "command": "beyondcompareintegration.compareSelected",
        "key": "alt+shift+5",
        "when": "filesExplorerFocus && listMultiSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/windows-registry": "^1.1.0"
  }
}
